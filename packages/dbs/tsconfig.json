{
  "files": ["src/index.ts"],

  "buildOptions": {

  },
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
      "declaration": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es2018",
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "jest"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src"
  ]

}
