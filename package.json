{
  "private": true,
  "workspaces": {
    "packages": ["packages/*"]
  },
  "scripts": {
    "dev": "npm-run-all --parallel components:dev app:dev",
    "app:dev": "yarn workspace beekeeper-studio run dev",
    "components:dev": "yarn workspace bks-components run dev"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
    "eslintConfig": {
      "root": true,
      "env": {
        "node": true
      },
      "extends": [
        "plugin:vue/essential",
        "eslint:recommended",
        "@vue/typescript"
      ],
      "rules": {
        "no-console": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "no-unused-vars": "off"
      },
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "ecmaFeatures": {
          "legacyDecorators": true
        }
      },
      "overrides": [
        {
          "files": [
            "tests/**/*.{j,t}s?(x)"
          ],
          "env": {
            "jest": true
          }
        }
      ]
    }
}

